@page "{id:int}"
@using WebApp.Pages.UpdateCategory
@model UpdateCategoryModel
<form method="post">

  <div class="page-wrapper">
    <div class="item-card">
        <div class="item-title">Update Category</div>

        <form method="post" asp-route-id="@RouteData.Values["id"]">

            <div class="form-group">
                <label asp-for="dto.Name"></label>
                <input asp-for="dto.Name" />
            </div>
            <div class="form-group">
                <label asp-for="dto.Description"></label>
                <input asp-for="dto.Description" />
            </div>
            <div class="btn-group">
                <button type="submit" class="btn-primary">Update</button>
                <a asp-page="/Categorys/GetCategory" class="btn-secondary">Exit</a>
            </div>

        </form>
    </div>
</div>
</form>