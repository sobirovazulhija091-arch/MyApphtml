@page "{id:int}"
@using WebApp.Pages.UpdateProduct
@model UpdateProductModel
<form method="post">

  <div class="page-wrapper">
    <div class="item-card">
        <div class="item-title">Update Product</div>

        <form method="post" asp-route-id="@RouteData.Values["id"]">

            <div class="form-group">
                <label asp-for="dto.Name"></label>
                <input asp-for="dto.Name" />
            </div>

            <div class="form-group">
                <label asp-for="dto.Price"></label>
                <input asp-for="dto.Price" type="number" step="0.01" />
            </div>

            <div class="form-group">
                <label asp-for="dto.Description"></label>
                <input asp-for="dto.Description" />
            </div>

            <div class="form-group">
                <label asp-for="dto.CategoryId"></label>
                <input asp-for="dto.CategoryId" type="number" />
            </div>

            <div class="btn-group">
                <button type="submit" class="btn-primary">Update</button>
                <a asp-page="/Products/GetProduct" class="btn-secondary">Exit</a>
            </div>

        </form>
    </div>
</div>
</form>